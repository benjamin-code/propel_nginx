log_format  sm  '$remote_addr - $remote_user [$time_local] "$request" '
                  '$status $body_bytes_sent "$http_referer" '
                  '"$http_user_agent" "$http_x_forwarded_for" '
                  '$upstream_addr $upstream_status $request_time $upstream_response_time';


access_log              /var/log/nginx/sm.access.log    sm;
error_log               /var/log/nginx/sm.error.log;

upstream backend {
    least_conn;
    server <%= @upstream_1 %>;
    server <%= @upstream_2 %>;
    server <%= @upstream_3 %>;
    server <%= @upstream_4 %>;
}

server {  
    location / {  
        proxy_pass http://backend;  
    }  
} 
